<h1 class="text-center text-uppercase"> Jestes zapisany na: </h1>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Wyloguj', destroy_user_session_path, :method => :delete  %></li>
        <li><%= link_to 'Wyjazdy', events_path %></li>
        <li><%= link_to 'Rezerwacje', bookings_path %></li>
      </ul>
    </div>
  </div>
</nav>


<% if @bookings.any? %>
  <table class="table">
    <tr>
      <th>
        <%= "Nazwa wycieczki" %>
      </th>
      <th>
        <%= "Data wyjazdu" %>
      </th>
      <th>
        <%= "Numer rezerwacji" %>
      </th>
      <th>
        <%= "Zatwierdzona przez admina" %>
      </th>
    </tr>
    <% @bookings.each do |booking| %>
      <tr>
        <td>
          <%= booking.event.name %>
        </td>
        <td>
          <%= booking.event.start_date.strftime("%d-%m-%Y") %>
        </td>
        <td>
          <%= booking.id %>
        </td>
        <td>
          <%= booking.confirmed? ? 'Tak' : 'Nie' %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h3 class="text-center"> Nie posiadasz rezerwacji </h3>
<% end %>
